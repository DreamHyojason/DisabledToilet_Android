<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- 위치 점 아이콘 -->
    <item>
        <bitmap
            android:src="@drawable/blue_marker_icon"
        android:gravity="center"/>
    </item>

    <!-- 라벨 배경 (타원형) -->
    <item android:top="50dp" android:left="10dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- 라벨 배경 색상 -->
            <corners android:radius="8dp"/> <!-- 모서리 둥글기 -->
            <stroke
                android:width="1dp"
                android:color="#000000"/> <!-- 테두리 색상 -->
        </shape>
    </item>

</layer-list>
