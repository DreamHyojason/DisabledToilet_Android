<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 그림자 레이어 -->
    <item android:left="10dp" android:top="10dp"> <!-- 왼쪽과 위쪽으로 4dp 이동 -->
        <shape android:shape="rectangle">
            <solid android:color="#40000000" /> <!-- 반투명 검정색 그림자 -->
            <corners android:radius="20dp" />
        </shape>
    </item>

    <!-- 버튼 배경 레이어 -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- 버튼 배경 색상 -->
            <corners android:radius="20dp" />
            <stroke
                android:width="1dp"
                android:color="#B0B0B0" /> <!-- 회색 테두리 -->
        </shape>
    </item>

</layer-list>
