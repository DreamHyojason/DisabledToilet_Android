<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/itemLayout"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/bottomline"
    android:paddingVertical="13dp"
    android:paddingHorizontal="11dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/toiletName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="2sp"
        android:text="방곡빌딩"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/distance"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/distance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="3km"
        android:textColor="@color/mainColor"
        android:textSize="15sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/address"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintRight_toLeftOf="@id/address" />

    <TextView
        android:id="@+id/address"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="서울 방광곡곡서울방광곡곡서울방광곡곡서울 방광곡곡서울 방광곡곡서울 방광곡곡서울 방광곡곡서울 방광곡곡서울 방광곡곡"
        android:textSize="15sp"
        android:layout_marginLeft="10dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/distance"
        app:layout_constraintTop_toBottomOf="@id/toiletName"
        app:layout_constraintHorizontal_bias="0"

        android:maxLines="2"
        android:singleLine="false"
        android:breakStrategy="simple"

        app:layout_constraintBottom_toBottomOf="parent"
        />

</androidx.constraintlayout.widget.ConstraintLayout>
