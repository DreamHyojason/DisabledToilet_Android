<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    tools:context=".User.MyPageActivity">

    <!-- 상단의 AppBar -->
    <FrameLayout
        android:id="@+id/mypage_appbar"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintTop_toTopOf="parent"
        android:background="@color/white"

        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:text="마이페이지"
            android:fontFamily="@font/notosanskr_bold"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <ImageButton
            android:layout_marginLeft="10dp"
            android:id="@+id/back_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="start|center_vertical"
            android:background="@android:color/transparent"
            android:src="@drawable/back_button"
            android:scaleType="fitCenter"
            android:contentDescription="Back Button" />
    </FrameLayout>

    <!-- 프로필 섹션 -->
    <LinearLayout
        android:layout_marginTop="5dp"
        android:id="@+id/profile_section"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        app:layout_constraintTop_toBottomOf="@+id/mypage_appbar"
        app:layout_constraintHeight_percent="0.3"
        android:background="@color/white">

        <LinearLayout
            android:layout_marginLeft="5dp"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.5"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginTop="10dp"
            >


            <ImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:contentDescription="Profile Image"
                android:background="@drawable/profile_img"
                android:clipToOutline="true"
                android:scaleType="centerCrop"
            />

            <TextView
                android:id="@+id/mypage_username_txt"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="홍길동"
                android:gravity="center"
                android:fontFamily="@font/notosanskr_semibold"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_marginLeft="20dp" />
        </LinearLayout>

        <!-- 프로필 수정 및 공유 버튼 -->
<!--        <LinearLayout-->
