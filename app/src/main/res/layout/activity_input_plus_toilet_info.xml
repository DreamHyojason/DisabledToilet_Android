<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!-- Top Layout with overlay -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <!-- Text centered in the FrameLayout -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/notosanskr_bold"
            android:gravity="center_horizontal"
            android:text="화장실 정보 입력"
            android:textColor="@color/black"
            android:textSize="25dp" />

        <!-- Back button positioned on top of the text -->
        <ImageButton
            android:contentDescription="화면 뒤로 돌아가기 버튼"

            android:id="@+id/back_button"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="start|center_vertical"
            android:layout_marginLeft="10dp"
            android:background="@android:color/transparent"
            android:scaleType="fitCenter"
            android:src="@drawable/back_button" />

    </FrameLayout>


    <!-- Main Layout below the top section -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="10"
        android:background="@color/background"
        android:padding="20dp">

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_round_box"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp">


                <TextView
                    android:id="@+id/toilet_name_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="화장실 이름"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:contentDescription="화장실 추가 시 화장실 이름 입력 칸"

                    android:id="@+id/plus_toilet_input"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:paddingLeft="15dp"
                    android:background="@drawable/search_bar_background"
                    android:hint="화장실 이름 (20자 이내)"
                    android:textColorHighlight="@color/black"
                    android:textColor="@color/black"
                    android:fontFamily="@font/notosanskr_bold"
                    android:textSize="15dp"
                    android:textColorHint="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/toilet_name_txt" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_marginTop="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/white_round_box"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp">


                <TextView
                    android:id="@+id/toilet_address_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="화장실 주소"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <EditText
                    android:contentDescription="화장실 추가 시 화장실 주소 입력 칸"

                    android:id="@+id/toilet_address_edit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/search_bar_background"
                    android:hint="화장실 주소"
                    android:textColor="@color/black"
                    android:textColorHighlight="@color/black"
                    android:textSize="15dp"
                    android:paddingLeft="15dp"
                    android:fontFamily="@font/notosanskr_bold"
                    android:textColorHint="@color/black"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/toilet_address_txt" />

            </androidx.constraintlayout.widget.ConstraintLayout>


            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/white_round_box"
                android:paddingHorizontal="10dp"
                android:paddingVertical="10dp">

                <TextView
                    android:id="@+id/toilet_status_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="화장실 상태 선택"
                    android:textColor="@color/black"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/white_round_box"
                    android:orientation="vertical"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/toilet_status_txt">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:contentDescription="화장실 추가 시 화장실 상태 버튼"

                                android:id="@+id/filter1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/toilet_status_nonselected_button"
                                android:gravity="center"
                                android:text="남녀구분"
                                android:textColor="@color/black"
                                android:textSize="17dp" />

                            <TextView
                                android:contentDescription="화장실 추가 시 화장실 상태 버튼"

                                android:id="@+id/filter2"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/toilet_status_nonselected_button"
                                android:gravity="center"
                                android:text="손잡이"
                                android:textColor="@color/black"
                                android:textSize="17dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:contentDescription="화장실 추가 시 화장실 상태 버튼"

                                android:id="@+id/filter3"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/toilet_status_nonselected_button"
                                android:gravity="center"
                                android:text="남녀구분"
                                android:textColor="@color/black"
                                android:textSize="17dp" />

                            <TextView
                                android:contentDescription="화장실 추가 시 화장실 상태 버튼"

                                android:id="@+id/filter4"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/toilet_status_nonselected_button"
                                android:gravity="center"
                                android:text="손잡이"
                                android:textColor="@color/black"
                                android:textSize="17dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:contentDescription="화장실 추가 시 화장실 상태 버튼"

                                android:id="@+id/filter5"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/toilet_status_nonselected_button"
                                android:gravity="center"
                                android:text="남녀구분"
                                android:textColor="@color/black"
                                android:textSize="17dp" />

                            <TextView
                                android:contentDescription="화장실 추가 시 화장실 상태 버튼"

                                android:id="@+id/filter6"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/toilet_status_nonselected_button"
                                android:gravity="center"
                                android:text="손잡이"
                                android:textColor="@color/black"
                                android:textSize="17dp" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <TextView
                                android:contentDescription="화장실 추가 시 화장실 상태 버튼"

                                android:id="@+id/filter7"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/toilet_status_nonselected_button"
                                android:gravity="center"
                                android:text="남녀구분"
                                android:textColor="@color/black"
                                android:textSize="17dp" />

                            <TextView
                                android:contentDescription="화장실 추가 시 화장실 상태 버튼"

                                android:id="@+id/filter8"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:layout_margin="5dp"
                                android:layout_weight="1"
                                android:background="@drawable/toilet_status_nonselected_button"
                                android:gravity="center"
                                android:text="손잡이"
                                android:textColor="@color/black"
                                android:textSize="17dp" />


                        </LinearLayout>
                    </LinearLayout>


                </LinearLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>


        </LinearLayout>

        <Button
            android:contentDescription="화장실 추가 시 화장실 최종 등록 확인 버튼"

            android:id="@+id/plus_toilet_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginHorizontal="30dp"
            android:background="@drawable/maincolor_rounded"
            android:fontFamily="@font/notosanskr_bold"
            android:text="화장실 등록"
            android:textColor="@color/white"
            android:textSize="17dp" />

    </FrameLayout>
</LinearLayout>
